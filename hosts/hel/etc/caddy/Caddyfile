*.localhost25565.com {
	tls {
		# TODO: document why these two lines are needed
		propagation_timeout -1
		propagation_delay 30s

		dns porkbun {
			api_key {$PORKBUN_API_KEY}
			api_secret_key {$PORKBUN_API_SECRET_KEY}
		}
	}

	@hel host hel.localhost25565.com
	handle @hel {
		respond "Oh, hi Mark!"
	}

	@bitwarden host bw.localhost25565.com
	handle @bitwarden {
		reverse_proxy 127.0.0.1:8000 {
			header_up X-Real-IP {remote_host}
		}
	}

	@syncthing host st.localhost25565.com
	handle @syncthing {
		reverse_proxy 127.0.0.1:8384 {
			header_up Host {upstream_hostport}
		}
	}

	@dms host mail.localhost25565.com
	handle @dms {
		respond "Hello from DMS"
	}
}
